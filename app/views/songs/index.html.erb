<div class="content">

  <!-- SONG NAVIGATION -->
  <h1 class="page-title">SONG INDEX</h1>
  <div class="song-index-container">
  <h3>FILTER SONGS BY:</h3>
  <ul class="nav nav-tabs nav-justified">
    <li role="presentation" class="filter-category active"><a href="#">DIFFICULTY</a></li>
    <li role="presentation" class="filter-category"><a href="#">GENRE</a></li>
    <li role="presentation" class="filter-category"><a href="#">COMPOSER</a></li>
  </ul>

  <!-- DIFFICULTY BUTTONS -->
  <% @difficulties.each do |difficulty| %>
    <button class="btn btn-filter difficulty" data-category="difficulty"><%= difficulty.name.upcase %></button>
  <% end %>

  <!-- GENRE BUTTONS -->
  <% @genres.each do |genre| %>
    <button class="btn btn-filter genre hidden" data-category="genre"><%= genre.name.upcase %></button>
  <% end %>
 
  <!-- COMPOSER BUTTONS -->
  <% @composers.each do |composer| %>
    <button class="btn btn-filter composer hidden" data-category="composer"><%= composer.last_name.upcase %></button>
  <% end %>
  </div>

  <!-- SONG LIST -->
  <ul class="list-unstyled songs-list">
  <% @songs.each do |song| %>
    <li class="song-link" data-composer="<%= song.composer.last_name.downcase %>" data-difficulty="<%= song.difficulty.name.downcase %>" data-genre='<%= song.genres_string %>'><%= link_to song.name, song_path(song.id) %></li>
  <% end %>
  </ul>
</div>
